@model Apresentacao.Models.Conta

@{
    ViewData["Title"] = "Incluir";
    Layout = "~/Views/Layout/_LayoutPadrao.cshtml";
}

<h1>INCLUIR</h1>

<form asp-controller="Conta" asp-action="Incluir" method="post">
    <div class="form-group">
        <label asp-for="Id">Código:</label>
        <input asp-for="Id" type="text" name="Id" class="form-control" id="Id">
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descrição:</label>
        <input asp-for="Descricao" type="text" name="descricao" class="form-control" id="descricao">
    </div>
    <button type="reset" class="btn btn-primary">Cancelar</button>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

